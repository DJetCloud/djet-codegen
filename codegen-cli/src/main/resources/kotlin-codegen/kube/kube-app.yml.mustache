apiVersion: apps/v1
kind: Deployment
metadata:
  name: app-{{appNameLower}}
  namespace: default
spec:
  minReadySeconds: 5
  replicas: 1
  selector:
    matchLabels:
      app: app-{{appNameLower}}
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  template:
    metadata:
      labels:
        app: app-{{appNameLower}}
    spec:
      containers:
        - env:
            - name: DB_HOST
              value: db
          image: {{containerRegistry}}/{{systemLower}}/{{appNameLower}}:0.0.1-master
          imagePullPolicy: Always
          name: app-{{appNameLower}}
          ports:
            - containerPort: 8080
          resources:
            limits:
              cpu: 350m
              memory: 450Mi
            requests:
              cpu: 250m
              memory: 350Mi
      imagePullSecrets:
        - name: gitlab-secret
---
apiVersion: v1
kind: Service
metadata:
  name: app-{{appNameLower}}
  namespace: default
spec:
  ports:
    - port: 8080
  selector:
    app: app-{{appNameLower}}
  type: LoadBalancer
---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/rewrite-target: "/$2"
    nginx.ingress.kubernetes.io/x-forwarded-prefix: "/{{appNameLower}}/v1"
  name: ingress-{{appNameLower}}
  namespace: default
spec:
  rules:
    - http:
        paths:
          - backend:
              serviceName: app-{{appNameLower}}
              servicePort: 8080
            path: "/{{appNameLower}}/v1(/|$)(.*)"
