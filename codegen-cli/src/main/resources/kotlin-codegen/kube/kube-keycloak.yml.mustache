apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{systemLower}}-keycloak
  namespace: {{namespace}}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{systemLower}}-keycloak
  template:
    metadata:
      labels:
        app: {{systemLower}}-keycloak
    spec:
      containers:
      - name: {{systemLower}}-keycloak
        envFrom:
          - configMapRef:
              name: {{systemLower}}-configmap
          - secretRef:
              name: {{systemLower}}-secret
        image: jboss/keycloak:12.0.4
        imagePullPolicy: Always
        resources:
          requests:
            memory: 400Mi
          limits:
            memory: 600Mi
        args:
        - "-b"
        - "0.0.0.0"
        - "-Djboss.http.port=8080"
        - "-Djboss.https.port=8443"
        ports:
        - name: http
          containerPort: 8080
        - name: https
          containerPort: 8443
---
apiVersion: v1
kind: Service
metadata:
  name: {{systemLower}}-keycloak
  namespace: {{namespace}}
  labels:
    app: {{systemLower}}-keycloak
spec:
  ports:
  - name: http
    port: 8080
  - name: https
    port: 8443
  selector:
    app: {{systemLower}}-keycloak
  type: LoadBalancer
---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/proxy-buffer-size: 128k
    nginx.ingress.kubernetes.io/proxy-buffers-number: '4'
    nginx.ingress.kubernetes.io/rewrite-target: "/$2"
  name: ingress-keycloak
  namespace: {{namespace}}
spec:
  rules:
  - http:
      paths:
      - backend:
          serviceName: {{systemLower}}-keycloak
          servicePort: 8080
        path: "/{{#routePrefix}}{{{routePrefix}}}-{{/routePrefix}}keycloak/v1(/|$)(.*)"