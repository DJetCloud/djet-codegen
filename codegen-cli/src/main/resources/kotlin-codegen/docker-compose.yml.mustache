version: '3.8'
services:
  {{systemLower}}-db:
    image: {{database.image}}
    container_name: {{systemLower}}-db
    restart: always
    command: --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_USER: root
      MYSQL_ROOT_PASSWORD: Qw123456
      POSTGRES_USER: root
      POSTGRES_PASSWORD: Qw123456
    ports:
      - 3307:{{database.port}}
    volumes:
      - db_data:/var/lib/mysql
{{#appsMap}}
  {{systemLower}}-{{name}}:
    image: app-{{name}}:0.0.1
    container_name: {{systemLower}}-{{name}}
    restart: on-failure
    environment:
      DB_HOST: {{systemLower}}-db
      DB_PORT: {{database.port}}
    ports:
      - {{port}}:8080
    depends_on:
      - {{systemLower}}-db
{{/appsMap}}
{{#keycloak}}
  {{systemLower}}-keycloak:
    image: jboss/keycloak:12.0.4
    container_name: {{systemLower}}-keycloak
    restart: on-failure
    command:
      - "-b"
      - "0.0.0.0"
      - "-Dkeycloak.profile.feature.account2=enabled"
      - "-Djboss.http.port=8099"
    volumes:
      - ./config:/config/
    environment:
      KEYCLOAK_IMPORT: /config/realm.json
      KEYCLOAK_USER: admin
      KEYCLOAK_PASSWORD: admin
      DB_VENDOR: mysql
      DB_ADDR: {{systemLower}}-db
      DB_USER: root
      DB_PASSWORD: Qw1234561
    ports:
      - 8099:8099
    depends_on:
      - {{systemLower}}-db
{{/keycloak}}
volumes:
  db_data: