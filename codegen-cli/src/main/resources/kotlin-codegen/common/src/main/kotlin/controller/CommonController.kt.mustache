package {{basePackage}}.controller

import {{basePackage}}.domain.BaseResource
import org.springframework.data.domain.Page
import org.springframework.data.domain.Pageable
import org.springframework.http.ResponseEntity

interface CommonController<E : BaseResource> {
    fun create(domain: E): ResponseEntity<E>
    fun delete(id: String, filter: Map<String, Any?>? = null): ResponseEntity<E>
    fun getById(id: String, filter: Map<String, Any?>? = null): ResponseEntity<E>
    fun getAll(search: String?, pageable: Pageable, filter: Map<String, Any?>? = null): ResponseEntity<Page<E>>
    fun update(id: String, domain: E, filter: Map<String, Any?>? = null): ResponseEntity<E>
    fun modify(id: String, domain: E, filter: Map<String, Any?>? = null): ResponseEntity<E>
    fun saveAll(domains: List<E>, filter: Map<String, Any?>? = null): List<E>
    fun deleteAll(ids: List<String>, filter: Map<String, Any?>? = null): List<E>
}
